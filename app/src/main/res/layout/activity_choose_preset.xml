<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="#F6F6F6"
    tools:context=".ChoosePresetActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose A Preset..."
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="50sp"/>

    <Button
        android:layout_width="300dp"
        android:id="@+id/btnCreateWarcraft"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:text="World of Warcraft"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCreateGW2"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:text="Guild Wars 2"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/btnCreateLOTRO"
        android:textSize="18sp"
        android:text="Lord of the Rings Online"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/btnCreateESO"
        android:textSize="18sp"
        android:text="The Elder Scrolls Online"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:id="@+id/btnCreateFF"
        android:text="Final Fantasy XIV"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/btnCreateStarWars"
        android:textSize="18sp"
        android:text="Star Wars: The Old Republic"/>


</LinearLayout>